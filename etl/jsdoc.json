{
  "opts": {
    "destination": "./dist/docs/",
    "encoding": "utf8",
    "recurse": true
  },
  "plugins": [
    "plugins/markdown"
  ],
  "recurseDepth": 10,
  "source": {
    "include": [
      "./src"
    ],
    "excludePattern": "(^|\\/|\\\\)_",
    "includePattern": ".+\\.js(doc|x)?$"
  },
  "sourceType": "module",
  "tags": {
    "allowUnknownTags": true
  },
  "templates": {
    "cleverLinks": false,
    "default": {
      "outputSourceFiles": true
    },
    "monospaceLinks": false
  }
}
